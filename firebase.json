{
  "hosting": {
    "public": "client/build",
    "rewrites": [
      {
        "source": "/.well-known/apple-developer-merchantid-domain-association",
        "function": "applePay"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
      
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
