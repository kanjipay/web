{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "build:dev": "env-cmd -f ./.env.dev tsc",
    "build:prod": "env-cmd -f ./.env.prod tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "npx prettier --write .",
    "postbuild": "copyfiles -u 1 src/**/*.handlebars src/**/*.json lib/"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@mft/moneyhub-api-client": "^4.16.0",
    "@sendgrid/mail": "^7.6.2",
    "@types/node-jose": "^1.1.10",
    "axios": "^0.26.1",
    "base-64": "^1.0.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-json-validator-middleware": "^2.2.1",
    "firebase": "^9.8.2",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.2",
    "fs": "^0.0.1-security",
    "http-raw-headers-parser": "^1.0.2",
    "jose": "^4.6.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "node-jose": "^2.1.1",
    "path": "^0.12.7",
    "sha256": "^0.2.0",
    "stream": "^0.0.2",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.17.2",
    "@types/base-64": "^1.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/sha256": "^0.2.0",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "firebase-functions-test": "^0.2.0"
  },
  "private": true
}
