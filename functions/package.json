{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "npx prettier --no-semi --write .",
    "postbuild": "copyfiles -u 1 src/**/*.handlebars src/**/*.json src/**/*.png lib/",
    "test-backend": "env-cmd -f ./.env.local mocha -r ts-node/register test/api/**/*.test.ts --timeout 10000",
    "test-frontend": "env-cmd -f ./.env.local mocha -r ts-node/register test/frontend/tests/*.test.ts --timeout 100000"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/error-reporting": "^3.0.1",
    "@sendgrid/mail": "^7.6.2",
    "@types/chai": "^4.3.1",
    "@walletpass/pass-js": "^6.9.1",
    "axios": "^0.26.1",
    "base-64": "^1.0.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "express": "^4.17.3",
    "express-json-validator-middleware": "^2.2.1",
    "express-useragent": "^1.0.15",
    "firebase": "^9.8.2",
    "firebase-admin": "^10.2.0",
    "firebase-functions": "^3.21.2",
    "gm": "^1.23.1",
    "jsonwebtoken": "^8.5.1",
    "jszip": "^3.10.1",
    "jwk-to-pem": "^2.0.5",
    "mocha": "^10.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.37",
    "raw-body": "^2.5.1",
    "selenium-stealth": "^1.0.1",
    "sha256": "^0.2.0",
    "stripe": "^9.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.17.2",
    "@types/adm-zip": "^0.5.0",
    "@types/base-64": "^1.0.0",
    "@types/express-useragent": "^1.0.2",
    "@types/gm": "^1.18.12",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/puppeteer": "^5.4.6",
    "@types/selenium-webdriver": "^4.1.1",
    "@types/sha256": "^0.2.0",
    "@types/stripe-v3": "^3.1.26",
    "@types/uuid": "^8.3.4",
    "chromedriver": "^103.0.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "firebase-functions-test": "^0.2.0",
    "geckodriver": "^3.0.1",
    "i": "^0.3.7",
    "npm": "^8.13.1",
    "path": "^0.12.7",
    "puppeteer": "^15.0.0",
    "puppeteer-extra": "^3.3.0",
    "puppeteer-extra-plugin-stealth": "^2.10.1",
    "selenium-webdriver": "^4.2.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.3"
